{
  "manifest_version": 3,
  "name": "Generic AI Website Navigator",
  "description": "AI agent that understands websites and guides users",
  "version": "1.0",

  "permissions": ["activeTab", "scripting"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup.html"
  }
}
