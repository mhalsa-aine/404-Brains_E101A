{
  "manifest_version": 3,
  "name": "Website Reading Chatbot",
  "version": "1.0",
  "description": "Chatbot that reads website content",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
