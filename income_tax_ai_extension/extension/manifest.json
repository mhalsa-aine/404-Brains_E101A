{
  "manifest_version": 3,
  "name": "Website Reading Chatbot",
  "version": "1.0",
  "description": "AI assistant that understands and navigates websites",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
